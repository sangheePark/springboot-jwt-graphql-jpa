<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<setting name="callSettersOnNulls" value="true" />	<!-- 값이 null인 컬럼 누락 방지 -->
	</settings>

	<typeAliases>
		<package name="com.novles" />
	</typeAliases>

	<mappers>
		<mapper resource="mapper/security/AccountMapper.xml" />
		<mapper resource="mapper/system/CodeMapper.xml" />
	</mappers>
</configuration>